<div class="panel panel-primary">
	<div class="panel-heading">Transaction complete<br>
		<%= @departing.full_name %>
		<span class="glyphicon glyphicon-plane"></span>
		<%= @arriving.full_name %></div>
		

		<div class='table-responsive'>
			<table class="table table-hover">
				<tr class='info'>
					<th>Name</th>
					<th>Email</th>
				</tr>
				<% @passengers.each do |f| %>
				<tr class='active'>
					<td><%= f.name  %></td>
					<td><%= f.email %></td>
				</tr>
				<% end %>
			</table> 
		</div>
		<div class='default'>
			<div class="btn btn-default">
				<%= link_to 'Home', root_path, :class => "btn" %>
			</div>
		</div>
	</div>

	